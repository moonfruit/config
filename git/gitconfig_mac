[user]
	useConfigOnly = true

[color]
	ui = auto

[core]
	excludesfile = /Users/moon/.gitignore
	quotepath = false
	autocrlf = input
	pager = less -x5,9

[push]
	default = simple

[http]
	sslVerify = false

[alias]
	br = branch
	ci = commit
	co = checkout
	di = diff
	dic = diff --cached
	glog = log --graph
	mlog = log --stat --summary
	h = help
	mg = merge
	rb = rebase
	ss = stash
	st = status
	un = reset HEAD --
	sb = submodule
	sbs = submodule status
	pusha = push --recurse-submodules=on-demand
	pulla = pull --recurse-submodules

[credential]
	helper = osxkeychain

[url "persistent-https"]
	insteadof = https

[url "persistent-http"]
	insteadof = http

[mergetool "idea"]
    cmd = /usr/local/bin/idea merge "$LOCAL" "$REMOTE" "$BASE" "$MERGED"

[difftool "idea"]
    cmd = /usr/local/bin/idea diff "$LOCAL" "$REMOTE"

[merge]
	tool = idea

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 

[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
